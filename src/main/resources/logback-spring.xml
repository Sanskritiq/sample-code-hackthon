 <configuration>
  <appender name="CLOUD" class="com.google.cloud.logging.logback.LoggingAppender">

    <!-- Optional: Filter logs at or above a certain level -->
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>

    <!-- Optional: Custom log name -->
    <log>application.log</log>

    <!-- Optional: Resource type; usually auto-detected -->
    <!-- Remove or update 'gae_app' if you're not on App Engine -->
    <resourceType>cloud_run_revision</resourceType>

    <!-- Optional: Enhancer (remove or correct class name if unused) -->
    <!-- Make sure this class exists in your classpath -->
    <!-- <enhancer>com.example.logging.logback.enhancers.ExampleEnhancer</enhancer> -->

    <!-- Optional: Level that triggers a flush -->
    <flushLevel>WARN</flushLevel>

  </appender>

  <root level="INFO">
    <appender-ref ref="CLOUD" />
  </root>
</configuration>
